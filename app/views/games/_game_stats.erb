<div class="demo-card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h4 class="mdl-card__title-text">Great round on: <%= @game.deck.name %>! </h4>
  </div>
  <div class="mdl-card__supporting-text">
    <h6>You got <%= @game.amount_correct_on_first_try %> correct on the first try! </h6>
    <h6>You made <%= @game.total_guesses %> total guesses </h6>

  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a href="/" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      PLAY ANOTHER ROUND
    </a>
  </div>
  <div class="mdl-card__menu">
    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">share</i>
    </button>
  </div>
</div>
