<% if @no_access %>
  <h2><%= @no_access %></h2>
<% end %>

<div class="center">
  <% @decks.each do |deck| %>
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand home-page-card" >
      <h2 class="mdl-card__title-text"><%= deck.name %></h2>
    </div>
    <div class="mdl-card__supporting-text">
      This is a good dog.
    </div>
    <div class="mdl-card__actions mdl-card--border">
          <form method="POST" action="/games">
            <input type="hidden" name="deck_id" value="<%=deck.id %>">
            <input type="submit" value="Play" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
          </form>
    </div>
  </div>
  <div style="height:50px; width:25px;"></div>
  <% end %>
</div>
